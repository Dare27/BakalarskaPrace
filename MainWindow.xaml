<Window x:Class="BakalarskaPrace.MainWindow"
        x:Name="window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window" Height="515" Width="943" Background="DarkGray"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Panel.ZIndex="1000">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="Load_Click"/>
                    <MenuItem Header="_Load" Click="Load_Click"/>
                    <MenuItem Header="_Export current frame" Click="ExportSingle_Click"/>
                    <MenuItem Header="_Export animation" Click="ExportFull_Click"/>
                    <MenuItem Header="_Export animation as .gif" Click="ExportGif_CLick"/>
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
            <Grid>
                <Grid Margin="170,0,170,0">
                    <Border>
                        <Grid x:Name="grid" MouseDown="Grid_MouseDown" MouseMove="Grid_MouseMove" MouseUp="Grid_MouseUp" Margin="0,0,0,0">
                            <Grid.RenderTransform>
                                <TranslateTransform x:Name="Grid_TranslateTransform"/>
                            </Grid.RenderTransform>
                            <Canvas Name="paintSurface" MouseWheel="Canvas_MouseWheel" SnapsToDevicePixels="False"  Width="64" Height="64" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                <Image x:Name="previewImage" Panel.ZIndex="20" MouseMove="Image_MouseMove" MouseDown="Image_MouseDown" MouseUp="Image_MouseUp" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" Width="64" Height="64" Opacity="0.75"/>
                                <Image x:Name="image" Panel.ZIndex="10" MouseMove="Image_MouseMove" MouseDown="Image_MouseDown" MouseUp="Image_MouseUp" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" Width="64" Height="64" />
                                <Canvas.Background>
                                    <DrawingBrush TileMode="Tile" Viewport="0,0,8,8" ViewportUnits="Absolute">
                                        <DrawingBrush.Drawing>
                                            <GeometryDrawing Geometry="M0,0 H1 V1 H2 V2 H1 V1 H0Z" Brush="LightGray"/>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Canvas.Background>
                                <Canvas.RenderTransform>
                                    <MatrixTransform/>
                                </Canvas.RenderTransform>
                            </Canvas>
                        </Grid>
                    </Border>
                    <Label Name="LabelImages"  Content="1:1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,52" />
                    <Label Name="LabelScale"  Content="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,26" />
                    <Label Name="LabelPosition"  Content="[width:height] x:y"  VerticalAlignment="Bottom" HorizontalAlignment="Left" RenderTransformOrigin="0.5,1"/>
                    <Button Content="Center" Click="Center_Click" Margin="0,0,3,3" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                </Grid>
                <ScrollViewer Width="170" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" CanContentScroll="True" BorderThickness="0,0,0,0">
                    <Canvas Background="#FF545454" HorizontalAlignment="Left" Width="155" MinHeight="450" VerticalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="ColorSelector0" Click="ColorSelection_Click" BorderBrush="Black" Background="Black" Width="32" Height="32" Margin="10,10,5,10" Canvas.Top="30"/>
                            <Button x:Name="ColorSelector1" Click="ColorSelection_Click" BorderBrush="Black" Background="White" Width="32" Height="32" Margin="5,10,10,10" Canvas.Left="42" Canvas.Top="30"/>
                            <Button x:Name="SwapColors" Content="Swap" Click="SwapColors_Click" Height="20" Width="45"/>
                        </StackPanel>

                        <Label Content="Transparency" Margin="0,0,0,0" Canvas.Top="97" Canvas.Left="5"/>
                        <Slider ValueChanged="Transparency_ValueChanged" Orientation="horizontal" Minimum="0" Maximum="255" Value="255" 
                        IsSnapToTickEnabled="True" TickFrequency="1" Width="138" Canvas.Top="123" Canvas.Left="5" />
                        <Label Content="Brush size" Margin="0,0,0,0" Canvas.Top="141" Canvas.Left="5"/>
                        <Slider ValueChanged="BrushSize_ValueChanged" Orientation="horizontal" Minimum="1" Maximum="4" Value="1" 
                        IsSnapToTickEnabled="True" TickFrequency="1" Width="138" Canvas.Top="167" Canvas.Left="5" />
                        <CheckBox Content="Alpha Blending" Canvas.Left="5" Canvas.Top="52" Checked="AlphaBlending_Checked" Unchecked="AlphaBlending_Unchecked" IsChecked="True"/>

                        <Label Content="Tools" Canvas.Top="187" Canvas.Left="5"/>
                        <Button Name="ToolBrush" Content="Brush" Canvas.Left="7" Canvas.Top="215" Width="66" Click="Brush_Click"/>
                        <Button Name="ToolEraser" Content="Eraser" Canvas.Left="79" Canvas.Top="215" Width="66" Click="Eraser_Click"/>
                        <Button Name="ToolSymmetricBrush" Content="Symmetric Brush" Canvas.Left="7" Canvas.Top="291" Width="66" Click="SymmetricBrush_Click"/>
                        <Button Name="ToolColorPicker" Content="Color Picker" Canvas.Left="79" Canvas.Top="240" Width="66" Click="ColorPicker_Click"/>
                        <Button Name="ToolBucket" Content="Bucket" Canvas.Left="7" Canvas.Top="265" Width="66" Click="Bucket_Click"/>
                        <Button Name="ToolSpecialBucket" Content="Special Bucket" Canvas.Left="79" Canvas.Top="265" Width="66" Click="SpecialBucket_Click"/>
                        <Button Name="ToolLine" Content="Line" Canvas.Left="79" Canvas.Top="291" Width="66" Click="Line_Click"/>
                        <Button Name="ToolEllipses" Content="Ellipses" Canvas.Left="79" Canvas.Top="317" Width="66" Click="Ellipses_Click"/>
                        <Button Name="ToolShading" Content="Shading" Canvas.Left="7" Canvas.Top="240" Width="66" Click="Shading_Click"/>
                        <Button Name="ToolRectangle" Content="Rectangle" Canvas.Left="7" Canvas.Top="317" Width="66" Click="Rectangle_Click"/>
                        <Button Name="ToolDithering" Content="Dithering" Canvas.Left="7" Canvas.Top="342" Width="66" Click="Dithering_Click"/>
                        <Button Name="ToolMove" Content="Move" Canvas.Left="79" Canvas.Top="342" Width="66" Click="Move_Click"/>


                        <Label Content="Transform" Canvas.Top="367" Canvas.Left="5"/>
                        <Button Content="Flip" Canvas.Left="6" Canvas.Top="393" Width="66" Click="Flip_Click"/>
                        <Button Content="Rotate" Canvas.Left="79" Canvas.Top="393" Width="66" Click="Rotate_Click"/>
                        <Button Content="Resize" Canvas.Left="6" Canvas.Top="418" Width="66" Click="Resize_Click"/>
                        <Button Content="Crop To Fit" Canvas.Left="79" Canvas.Top="418" Width="66" Click="CropToFit_Click"/>
                        <CheckBox Content="Additive" Canvas.Left="5" Canvas.Top="77" Checked="Additive_Checked" Unchecked="Additive_Unchecked" IsChecked="False"/>
                        <Button Content="Center Alligment" Canvas.Left="7" Canvas.Top="443" Width="66" Click="CenterAlligment_Click"/>
                    </Canvas>
                </ScrollViewer>
                <ScrollViewer Name="CustomScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Right" CanContentScroll="True" RenderTransformOrigin="0.5,0.5" >
                    <Grid Background="#FF545454" HorizontalAlignment="Right" Width="153" >
                        <StackPanel Width="153">
                            <StackPanel Width="153" Margin="0,5,0,5">
                                <Image Margin="4,2" x:Name="animationPreview" Panel.ZIndex="10" MouseMove="Image_MouseMove" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" Width="137" Height="137"/>
                                <DockPanel Margin="4,2">
                                    <Label Name="LabelFramesPerSecond"  Content="12" VerticalAlignment="Center"/>
                                    <Slider IsSnapToTickEnabled="True" TickFrequency="1" Maximum="60" ValueChanged="FramesPerSecond_ValueChanged" Value="12" Height="18" Margin="0,0,0,0"/>
                                </DockPanel>
                                <UniformGrid Rows="1" HorizontalAlignment="Stretch" Margin="4,2">
                                    <Button Content="Previous" Click="Previous_Click" Margin="0,0,2,0"/>
                                    <Button Content="Next" Click="Next_Click" Margin="2,0,0,0"/>
                                </UniformGrid>
                                <Button Content="Create image" Click="CreateImage_Click" Margin="4,2"/>
                                <Button Content="Duplicate image" Click="DuplicateImage_Click" Margin="4,2"/>
                                <Button Content="Delete image" Click="DeleteImage_Click" Margin="4,2"/>
                                <CheckBox Content="Onion skinning" Checked="OnionSkinning_Checked" Unchecked="OnionSkinning_Unchecked" IsChecked="False" Margin="4,2"/>
                            </StackPanel>
                            <StackPanel Name="ImagePreviews"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </DockPanel>

    </ScrollViewer>
</Window>
